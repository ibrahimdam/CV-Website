@using CvProjesi_1.Models.Entity
@model List<TblEgitimlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Baslik</td>
            <td>@item.Altbaslik1</td>
            <td>@item.Altbaslik2</td>
            <td>@item.Tarih</td>
            <td>@item.GNO</td>
            <td>
                <a href="/Egitim/EgitimSil/@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i>Sil</a>
            </td>
            <td>
                <a href="/Egitim/EgitimDüzenle/@item.Id" class="btn btn-info btn-sm"><i clas="fas fa-pencil-alt"></i>Düzenle</a>
            </td>
        </tr>
    }
</table>
<a href="/Egitim/EgitimEkle/" class="btn btn-primary">Yeni Eğitim Ekle</a>

